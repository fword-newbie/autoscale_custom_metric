apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    auto_build_vpa: ye
  name: puyuan-v1
spec:
  replicas: 1
  selector:
    matchLabels:
      app: puyuan
      version: v1
  template:
    metadata:
      labels:
        app: puyuan
        auto_build_vpa: ye
        sidecar.istio.io/inject: 'true'
        version: v1
    spec:
      containers:
      - command:
        - python3
        - manage.py
        - runserver
        - 0.0.0.0:80
        - --noreload
        image: pu
        imagePullPolicy: IfNotPresent
        name: puyuan
        resources:
          requests:
            cpu: 100m
            memory: 5Mi
      terminationGracePeriodSeconds: 5
